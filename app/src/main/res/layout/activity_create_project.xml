<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:context=".Project_Work.create_project">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Project Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/proj_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:text="Select Label Type"
        android:layout_marginTop="10dp"/>
<!--    <Spinner-->
<!--        android:id="@+id/label_type"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="30dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:focusable="true" />-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="#B6B2B2"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/label_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"/>

            </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/classText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Number of Classes"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="#B6B2B2"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/proj_cls_name"
                android:layout_width="match_parent"
                android:entries="@array/size_val"
                android:layout_height="wrap_content"
                android:padding="15dp"/>
            </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/addlabeltext"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Add Label"/>
    <LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <Button
        android:id="@+id/btwn_add_label1"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_baseline_add_24"
        android:text="Add"/>
    <Button
        android:id="@+id/btwn_add_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_add_24"
        android:text="Add"
        android:visibility="gone"/>

        </LinearLayout></ScrollView>

</LinearLayout>